                    <CheckBox x:Name="ColunbListControl" Margin="23,102,10,619" Style="{StaticResource Checkbox}" IsChecked="True" Checked="ColumnListChecked" Unchecked="ColumnListUnchecked">
                    <Label Content="Enable column list formatting" Width="581" Height="30" RenderTransformOrigin="0.5,0.5">
